{
	"name": "xbot",
	"version": "1.0.0",
	"description": "A Telegram bot running on Cloudflare Workers with TypeScript.",
	"main": "./dist/index.js",
	"scripts": {
		"start": "wrangler dev",
		"deploy": "wrangler deploy",
		"build": "tsc",
		"test": "jest",
		"lint": "eslint . --ext .ts --fix"
	},
	"keywords": [
		"cloudflare",
		"workers",
		"telegram",
		"bot",
		"typescript"
	],
	"author": "xieyuschen",
	"license": "MIT",
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240718.0",
		"@eslint/js": "^9.32.0",
		"@octokit/rest": "^20.1.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.1.0",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.3",
		"globals": "^16.3.0",
		"jest": "^30.0.5",
		"jiti": "^2.5.1",
		"prettier": "^3.6.2",
		"ts-jest": "^29.4.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"wrangler": "^4.26.0"
	},
	"dependencies": {
		"buffer": "^6.0.3",
		"cheerio": "^1.1.2",
		"dotenv": "^17.2.1",
		"hono": "^4.9.1",
		"moment": "^2.30.1",
		"openai": "^5.10.2",
		"postal-mime": "^2.4.4"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"rootDir": "src",
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)x?$",
		"coverageDirectory": "../coverage"
	}
}
